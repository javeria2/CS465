<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_parking_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="edu.illinois.cs465.parkingpterodactyl.ParkingListFragment">

        <ListView
            android:id="@+id/parking_list_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <ImageButton
            android:id="@+id/navigate"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@null"
            android:onClick=""
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/navigation_arrow" />

    </RelativeLayout>

    <!--Below is the transparent layout positioned at startup -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88666666"
        android:id="@+id/overlayparkinglocations"
        android:layout_marginStart="0px"
        android:layout_marginEnd="0px">

        <ImageView
            android:id="@+id/ivInstruction_messageoverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0px"
            android:layout_marginEnd="0px"
            android:clickable="false"

            android:src="@drawable/parking_locations_overlay" />
    </RelativeLayout>

</FrameLayout>

