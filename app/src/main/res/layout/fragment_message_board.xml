<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/messageboardparent"
        tools:context="edu.illinois.cs465.parkingpterodactyl.MessageBoardFragment">

        <include layout="@layout/content_message_board" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_input_add" />

    </FrameLayout>
    <!--Below is the transparent layout positioned at startup -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88666666"
        android:id="@+id/overlaymessagefragment"
        android:layout_marginStart="0px"
        android:layout_marginEnd="0px">

        <ImageView
            android:id="@+id/ivInstruction_messageoverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0px"
            android:layout_marginEnd="0px"
            android:clickable="false"

            android:src="@drawable/message_board_overlay" />
    </RelativeLayout>

</FrameLayout>

